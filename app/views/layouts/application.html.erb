<!DOCTYPE html>  
<html>  
<head>  
  <title>Auth</title>  
  <%= stylesheet_link_tag :all %>  
  <%= javascript_include_tag :defaults %>  
  <%= csrf_meta_tag %>  
</head>  
<body>  
  <% flash.each do |name, msg| %>  
    <%= content_tag :div, msg, :id => "flash#{name}" %>  
  <% end %>  
  
<%= yield %> 

<div id="user_nav">  
  <% if current_user %>  
    Logged in as <%= current_user.email %>  
    <%= link_to "Log out", log_out_path %>  
  <% else %>  
      
    <%= link_to "Log in", log_in_path %>  
  <% end %>  
</div>  
  
</body>  
</html>
