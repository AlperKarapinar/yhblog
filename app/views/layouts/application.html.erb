<!DOCTYPE html>  
<html>  
<head>  
  <title>Yeni Hayat</title>  
  <%= stylesheet_link_tag "application" %>  
  <%= javascript_include_tag "application" %>  
  <%= csrf_meta_tag %>  
</head>  
<body>  
  <% flash.each do |name, msg| %>  
    <%= content_tag :div, msg, :id => "flash#{name}" %>  
  <% end %>  
  
<%= yield %> 

<div id="user_nav"> 
  <%= link_to (t "general.homepage"), root_path %> |
  <%= link_to (t "general.dashboard"), user_dashboard_path %> |
  <%= link_to (t "general.logout"), log_out_path %>  |
  <% if current_user %>  
  <%= current_user.email %> <%= t "login as"%>
    
    
  <% else %>  
      
    <%= link_to (t "general.login"), log_in_path %>  
  <% end %>  
</div>  

</body>  
</html>

