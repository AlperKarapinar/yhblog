<!DOCTYPE html>  
<html>  
<head>  
  <title>Yeni Hayat</title>  
  <%= stylesheet_link_tag "application" %>  
  <%= javascript_include_tag "application" %>  
  <%= csrf_meta_tag %>  
</head>  
<body>  
	
<div id="core">
  <div class="main">
    <div id="header">
      <div class="logo"><%= link_to "Yeni Hayat Bilişim Blog", root_path%></div>
      <div class="nav">
        <ul>
          <li class="selected"><%= link_to (t "general.homepage"), root_path%></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
            <li><%= link_to "Dashboard", user_dashboard_path %></li>
            <% if current_user %> 
            <li><%= link_to (t "general.logout"), log_out_path %> 
            <% end %>
            <% if current_user %> 
            <% else %>  </li>
            <li><%= link_to (t "general.login"), log_in_path %>  
	          <% end %></li>
        </ul>
      </div>
    </div>
    <% flash.each do |name, msg| %>  
    <%= content_tag :div, msg, :id => "flash#{name}" %>   
    <% end %>
		<div class="yield">
 			<%= yield %> 
		</div>
    <div class="sidebar">
      <div class="search">
        <h3>Ara</h3>
				<%= form_tag(search_path, :method => "get") do %>
				  <%= text_field_tag :query, "", :class => "f" %>
				  <%= submit_tag (t "search"), :class => "b" %>
				<% end %>
      </div>
      <div class="topic_categories">
        <h3><%= t "categories" %></h3>
				<ul>
				<% Category.all.each do |category| %>
				  <li><%= link_to category.name, category_posts_path(category) %></li>
				<% end %>
				</ul>
      </div>
      <div class="most_read">
        <h3><%= t "newest"%></h3>
				<% most_recents = Post.where(:published => true).order("published_at DESC").limit(5) %>
        <ul>
					<% most_recents.each do |post| %>
						<li><%= link_to post.title, author_post_path(post.user, post) %></li>
					<% end %>
        </ul>
      </div>
      <div class="tags">
        <h3><%= t "tags"%></h3>
				<ul>
				<% tags = Post.tag_counts_on(:tags) %>
				<% tag_cloud(tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
				  <li><span><%= link_to tag.name, tag_posts_path(:tag => tag.name), :class => css_class %></span></li>
				<% end %>
				</ul>
      </div>
      <div class="last_authors">
        <h3><%= t "allusers"%></h3>
				<% authors = User.where(:author => true).all %>
        <ul>
					<% authors.each do |author| %>
	          <li>
	            <div class="avatar">
								<% unless author.photo_file_name %>
	              	<div class="empty"><img src="/assets/images/avatar_empty.png" width="33" height="34" alt="empty" /></div>
								<% else %>
									<div class="empty"><img src="<%= author.photo.url %>" width="33" height="34" alt="empty" /></div>
								<% end %>
	            </div>
              <div class="author_info"> <span class="name"><%= link_to author.name, author_posts_path(author)%></span> <%= link_to (t "allposts"), author_posts_path(author), :class => "all" %></div>
	          </li>
					<% end %>
				</ul>
      </div>
    </div>
    <div class="footer">
    <p>Copyright © 2011 - 2012 Lipsum Corp. and the authors.</p>
    </div>
	</div>  
</div>
</body>  
</html>

