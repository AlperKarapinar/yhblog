<h1>Listing Categories</h1>

<table>
  <tr>
    <th>Category Name</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>

    <td><%= link_to 'Show', [:admin, category] %></td>
    <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
    <% if category.posts.count == 0 %>
    <td><%= button_to 'Destroy', [:admin, category], confirm: 'Are you sure?', method: :delete %></td>
    <% end %>  
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_admin_category_path %> 