<div class="panel">
  <h3><%= t "categories"%></h3>
  <div class="panel-content">
    <table class="table table-bordered table-striped">
      <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to (t "general.show"), [:admin, category] %></td>
        <td><%= link_to (t "general.edit"), edit_admin_category_path(category) %></td>
        <%   if category.posts.count == 0 %>
          <td> | <%= link_to (t "general.destroy"), [:admin, category], confirm: 'Are you sure?', method: :delete %></td>
        <% end %>  
      </tr>
      <% end %>
    </table>
    <%= link_to (t "general.new category"), new_admin_category_path,:class=> "btn" %>
  </div>
</div>