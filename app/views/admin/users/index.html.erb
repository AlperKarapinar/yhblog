<h1>Listing users</h1>

<table>
  <tr>
    <th>Email</th>

    <th>First name</th>
    <th>Last name</th>
    <th>Admin</th>
    <th>Author</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>

    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.admin %></td>
    <td><%= user.author %></td>
    <td><%= user.active %></td>
    <td><%= link_to 'Show', [:admin, user] %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
    <td><%= link_to 'Destroy', [:admin, user], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

