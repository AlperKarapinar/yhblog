<% unless @posts.empty? %>

<div class="articles">
<% @posts.each do |post| %>
	<div class="article">
	  <div class="article-cdt">
	    <div class="cat"><%= link_to post.category.try(:name), category_posts_path(post.category) %></div>
			<div class="date"><%= post.published_at.try(:strftime, '%d-%m-%y') %></div>
			<div class="tag"><% post.tags.each do |tag|%><%= link_to tag.name, tag_posts_path(:tag => tag.name) %>
                      <% end %>
      </div>
	  </div>
	  <div class="article-title">
	    <h2><%= link_to post.title, author_post_path(post.user, post)%></h2>
	  </div>
		<div class="article-content">
		  <p>
		  <%= post.spot.html_safe %>
		  </p>
		</div>
		<div class="article-adv"> <span class="article-comment"><%= link_to (t "general.add", :class => (t "comment").downcase), author_post_path(post.user, post) %><%= link_to post.user.name, author_posts_path(post.user_id), :class => "au" %></span><span><%= link_to (t "more"), author_post_path(post.user, post), :class => "article-more" %></span> </div>
	</div>
<% end %>
</div>
<% end %>

