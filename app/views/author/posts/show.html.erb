
<div class="articles">
  <div class="article">
	  <div class="article-title">
      <span class="article_cat"><%= link_to @post.category.try(:name), category_posts_path(@post.category) %></span>
	    <h2><%= @post.title %></h2>
	  </div>
		<div class="article-content">
		  <p>
		  <%= markdown(@post.rendered_body) %>
		  </p>
    </div>
        <div class="article-cdt">
			<div class="date"><%= @post.published_at.try(:strftime, '%d-%m-%y') %></div>
			<div class="tag"><% @post.tags.each do |tag|%><%= link_to tag.name, tag_posts_path(:tag => tag.name) %>
        <% end %></div>
	      <div class="author"><%= link_to @post.user.name, author_posts_path(@post.user_id) %></div>

  </div>
  </div>
  <div class="admlinks">
   <li><%= link_to (t "general.edit"), edit_author_mypost_path(@post) %></li>
   <li><%= link_to (t "general.back"), author_myposts_path %></li>
   <li><%= link_to (t "general.destroy"), author_mypost_path(@post), confirm: (t "general.Are you sure"),
    :method => :delete %></li>
    </div>
</div>

