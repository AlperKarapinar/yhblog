<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <%= @post.rendered_body.html_safe %>
</p>

<h2>Comments</h2>
<%= render :partial => "author/comments/comment",
           :collection => @post.comments %>

<h2>Add a comment:</h2>
<%= render "author/comments/form" %>
 
