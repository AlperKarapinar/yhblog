<div class="articles">
  <div class="article">
    <div class="article-cdt">
	    <div class="cat"><%= link_to @post.category.try(:name), category_posts_path(@post.category) %></div>
			<div class="date">• <%= @post.published_at.try(:strftime, '%d-%m-%y') %> •</div>
			<div class="tag"><% @post.tags.each do |tag|%><%= link_to tag.name, tag_posts_path(:tag => tag.name) %><% end %></div>
	  </div>
	  <div class="article-title">
	    <h2><%= @post.title %></h2>
	  </div>
		<div class="article-content">
		  <p>
		  <%= @post.rendered_body.html_safe %>
		  </p>
		</div>
  </div>
</div>

<%= render :partial => "comment",
           :collection => @post.comments %>

<h5><%= t "general.add", :class => (t "comment").downcase%></h5>
<%= render "form" %>
<br />


