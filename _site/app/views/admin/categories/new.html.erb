
<%= form_for [:admin, @category] do |f| %>  
  <% if @category.errors.any? %>  
    <div class="error_messages">  
      <h2>Form is invalid</h2>  
      <ul>  
        <% for message in @category.errors.full_messages %>  
          <li><%= message %></li>  
        <% end %>  
      </ul>  
    </div>  
  <% end %>  
  <%= render 'form' %>
<% end %>  
